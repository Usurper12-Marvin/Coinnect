@model ListViewModel
@{
    ViewData["Title"] = "Client List";

}

<h2 class="text-center">List of Clients</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Identifier
            </th>
            <th>
                User name
            </th>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th>
                Email
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (User user in await Model.Clients)
        {
            <tr>
                <td>
                    @user.Identifier
                </td>
                <td>
                    @user.UserName
                </td>
                <td>
                    @user.FirstName
                </td>
                <td>
                    @user.LastName
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    @if (!User.IsInRole("Advisor"))
                    {
                        <a asp-action="UserDetails" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-outline-primary">Details</a>

                    }
                    else
                    {
                        <a asp-action="UsersHistory" asp-controller="Advisor" asp-route-id="@user.Id" class="btn btn-outline-primary">Users History</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>