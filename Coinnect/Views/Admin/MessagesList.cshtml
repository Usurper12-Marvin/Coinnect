@model ListViewModel

<h2 class="text-center">Message List</h2>
@if (Model.Messages.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Client's name
                </th>
                <th>
                    Client's email
                </th>
                <th>
                    Message
                </th>
                <th>
                    Date sent
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (ContactUs message in Model.Messages)
            {
                <tr>
                    <td>
                        @message.ClientName
                    </td>
                    <td>
                        @message.ClientEmail
                    </td>
                    <td>
                        @message.ContactUsText
                    </td>
                    <td>
                        @message.DateSent.ToString("dd MMM yyyy")
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No messages were found.</p>
}
