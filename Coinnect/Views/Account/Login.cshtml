@model UserViewModels.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<style>
        body 
        {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #000, #FF0000);
            display: flex;
            justify-content:center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: #FF0000;
        }
        .login-container 
        {
            background-color: #fff;
            justify-content:center;
            align-items: center;
            border-radius: 10px;
            padding: 30px;
            width: 350px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .login-container img 
        {
            width: 150px;
            margin-bottom: 10px;
        }
        .login-container input 
        {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .login-container button {
            width: 100%;
            padding: 10px;
            background-color: #0F9BDC;
            border: none;
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }
        .login-container button:hover {
            background-color: #0D6BAE;
        }
    </style>
<body>
<div class="login-container">
    <img src="~/images/coinnectlogo.png" />
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <form asp-action="Login" method="post">

        <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />

        <div class="mb-3">
                <input asp-for="Username" class="form-control" placeholder="Username" />
                <div><span asp-validation-for="Username" class="text-danger"></span></div>
        </div>

        <div class="mb-3">
            <input asp-for="Password" placeholder="Password" class="form-control" />
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
        </div>
        <button class="btn btn-primary" type="submit">Log In</button>
        <a asp-action="Register" asp-controller="Account" style="color: #0F9BDC;" class="btn">Register</a>
    </form>

</div>
</body>
 
