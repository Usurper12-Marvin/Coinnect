@model ListViewModel
@{
    @* Add Title *@
    ViewData["Title"] = "Accounts List";

}

<h2 class="text-center">Your Accounts</h2>

@if (TempData["message"] != null)
{
    <div id="alertContainer" class="alert alert-dismissible alert-secondary" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <span id="alertMessage">@TempData["message"]</span>
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Account Number
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (BankAccount accounts in Model.Accounts)
        {
            <tr>
                <td>
                    @accounts.AccountNumber
                </td>
                @* <td>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a>
                </td> *@
            </tr>
        }
    </tbody>
</table>